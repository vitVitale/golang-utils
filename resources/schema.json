{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "epic": {
        "type": "string"
      },
      "feature": {
        "type": "string"
      },
      "tests": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string"
                  },
                  "params": {
                    "type": "object",
                    "properties": {
                      "text": {
                        "type": "string"
                      },
                      "expected": {
                        "type": [
                          "string",
                          "number",
                          "integer",
                          "boolean"
                        ]
                      }
                    },
                    "required": [
                      "text"
                    ]
                  }
                },
                "required": [
                  "command",
                  "params"
                ]
              }
            }
          },
          "required": [
            "name",
            "steps"
          ]
        }
      }
    },
    "required": [
      "epic",
      "feature",
      "tests"
    ]
  }